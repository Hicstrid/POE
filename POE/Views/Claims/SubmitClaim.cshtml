@model POE.Models.ClaimSubmit

@{
    ViewData["Title"] = "Submit New Monthly Claim";
}

<div class="text-center">
    <h1 class="display-4">Contract Claim Submission</h1>
    <p class="lead">Please enter your monthly work details and submit supporting documents.</p>
</div>

<form asp-controller="Claims" asp-action="Submit" method="post" enctype="multipart/form-data">

    <div class="card p-4 mb-4">
        <h3 class="card-title">Claim Details</h3>

        <div class="form-group mb-3">
            <label asp-for="HourlyRate">Hourly Rate (R):</label>
            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" id="HourlyRate" required />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AdditionalNotes">Additional Notes:</label>
            <textarea asp-for="AdditionalNotes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
        </div>
    </div>

    <!-- ✅ ADD THIS AUTO-CALCULATION DISPLAY CARD -->
    <div class="card p-4 mb-4 bg-light">
        <h3 class="card-title text-success">
            <i class="fas fa-calculator"></i> Auto-Calculation Results
        </h3>
        <div class="row text-center">
            <div class="col-md-4">
                <h5>Total Hours</h5>
                <h3 id="TotalHoursDisplay" class="text-primary">0.00</h3>
            </div>
            <div class="col-md-4">
                <h5>Hourly Rate</h5>
                <h3 id="HourlyRateDisplay" class="text-info">R 0.00</h3>
            </div>
            <div class="col-md-4">
                <h5>Total Amount</h5>
                <h3 id="TotalAmountDisplay" class="text-success">R 0.00</h3>
            </div>
        </div>
    </div>

    <div class="card p-4 mb-4">
        <h3 class="card-title">Detailed Hours Worked</h3>

        <!-- FIXED: Check if Details exists and has items -->
        @for (int i = 0; i < (Model.Details?.Count ?? 1); i++)
        {
            <div class="row mb-3">
                <div class="col-md-4 form-group">
                    <label>Date of Work:</label>
                    <input asp-for="Details[i].DateOfWork" type="date" class="form-control" required />
                </div>
                <div class="col-md-6 form-group">
                    <label>Description of Work:</label>
                    <input asp-for="Details[i].Description" type="text" class="form-control" required />
                </div>
                <div class="col-md-2 form-group">
                    <label>Hours Worked:</label>
                    <input asp-for="Details[i].HoursWorked" type="number" step="0.5"
                           class="form-control hours-worked-input" required />
                </div>
            </div>
        }
    </div>

    <div class="card p-4 mb-4">
        <h3 class="card-title">Supporting Document Upload</h3>
        <div class="form-group">
            <label asp-for="ClaimFile">Upload Document (.pdf, .docx, .xlsx):</label>
            <input asp-for="ClaimFile" type="file" class="form-control-file" />
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-lg btn-success">
            <i class="fas fa-paper-plane"></i> Submit Claim
        </button>
    </div>
</form>

<!-- ✅ ADD THIS JAVASCRIPT SECTION -->
@section Scripts {
    <script>
        // Real-time auto-calculation function
        function calculateTotal() {
            let totalHours = 0;

            // Sum all hours from detail lines
            document.querySelectorAll('.hours-worked-input').forEach(input => {
                totalHours += parseFloat(input.value) || 0;
            });

            const hourlyRate = parseFloat(document.getElementById('HourlyRate').value) || 0;
            const totalAmount = totalHours * hourlyRate;

            // Update display areas
            document.getElementById('TotalHoursDisplay').textContent = totalHours.toFixed(2);
            document.getElementById('HourlyRateDisplay').textContent = 'R ' + hourlyRate.toFixed(2);
            document.getElementById('TotalAmountDisplay').textContent = 'R ' + totalAmount.toFixed(2);
        }

        // Initialize event listeners when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Listen to hourly rate changes
            document.getElementById('HourlyRate').addEventListener('input', calculateTotal);

            // Listen to all hours worked inputs
            document.querySelectorAll('.hours-worked-input').forEach(input => {
                input.addEventListener('input', calculateTotal);
            });

            // Calculate initial total on page load
            calculateTotal();
        });
    </script>
}
