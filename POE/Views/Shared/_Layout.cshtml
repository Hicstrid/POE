<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation Menu (Optional) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-file-invoice-dollar"></i> CMCS
            </a>
            <div class="navbar-nav ms-auto">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <span class="navbar-text me-3">
                        Welcome, @Context.Session.GetString("UserName")!
                    </span>
                    <a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a>
                }
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- TOAST NOTIFICATION CONTAINER - Add this right before closing body -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="fas fa-bell me-2"></i>
                <strong class="me-auto">System Notification</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                <!-- Message will appear here -->
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Toast Notification Script -->
    <script>
        // Real-time notifications function - available globally
        function showNotification(message, type = 'success') {
            const toastEl = document.getElementById('liveToast');
            const toastMessage = document.getElementById('toastMessage');

            // Set message and styling
            toastMessage.textContent = message;

            // Remove existing color classes
            toastEl.classList.remove('text-bg-success', 'text-bg-danger', 'text-bg-warning', 'text-bg-info');

            // Add appropriate color class
            toastEl.classList.add(`text-bg-${type}`);

            // Show the toast
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        // Auto-show notifications from TempData
        document.addEventListener('DOMContentLoaded', function() {
            // Check for success messages
            const successMessage = '@TempData["Success"]';
            if (successMessage) {
                showNotification(successMessage, 'success');
            }

            // Check for error messages
            const errorMessage = '@TempData["Error"]';
            if (errorMessage) {
                showNotification(errorMessage, 'danger');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>