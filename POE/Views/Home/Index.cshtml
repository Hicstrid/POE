@model POE.Models.User

@{
    ViewData["Title"] = "Login Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="card-title mb-0">Welcome Back</h3>
                    <p class="mb-0">Please sign in to your account</p>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Home" asp-action="Login" method="post">
                        @if (ViewData["LoginError"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["LoginError"]
                            </div>
                        }

                        <div class="form-group mb-3">
                            <label asp-for="username" class="form-label">Username:</label>
                            <input asp-for="username" type="text" class="form-control" required />
                            <span asp-validation-for="username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="password" class="form-label">Password:</label>
                            <input asp-for="password" type="password" class="form-control" required />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Sign In</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Don't have an account? <a asp-controller="Home" asp-action="Registration" class="text-decoration-none">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
