@model POE.Models.Claims

@{
    ViewData["Title"] = "Submit New Monthly Claim";
}

<div class="text-center">
    <h1 class="display-4">Contract Claim Submission</h1>
    <p class="lead">Please enter your monthly work details and submit supporting documents.</p>
</div>

<form asp-controller="Claims" asp-action="Submit" method="post" enctype="multipart/form-data">

    <div class="card p-4 mb-4">
        <h3 class="card-title">Claim Details</h3>

        <div class="form-group mb-3">
            <label asp-for="HourlyRate">Hourly Rate (R):</label>
            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" required />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AdditionalNotes">Additional Notes:</label>
            <textarea asp-for="AdditionalNotes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
        </div>
    </div>

    <div class="card p-4 mb-4">
        <h3 class="card-title">Detailed Hours Worked (Claim Line Item)</h3>
        <p class="text-muted">For this prototype, we'll enter one detail line. Future versions will allow multiple.</p>

        <div class="row">
            <div class="col-md-4 form-group">
                <label>Date of Work:</label>
                <input name="Details[0].DateOfWork" type="date" class="form-control" required />
            </div>
            <div class="col-md-6 form-group">
                <label>Description of Work (e.g., Module name, Admin task):</label>
                <input name="Details[0].Description" type="text" class="form-control" required />
            </div>
            <div class="col-md-2 form-group">
                <label>Hours Worked:</label>
                <input name="Details[0].HoursWorked" type="number" step="0.5" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="card p-4 mb-4">
        <h3 class="card-title">Supporting Document Upload (Part 2, Item 3)</h3>

        <div class="form-group">
            <label for="ClaimFile">Upload Document (.pdf, .docx, .xlsx):</label>
            <input type="file" id="ClaimFile" name="ClaimFile" class="form-control-file" />
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-lg btn-success">
            <i class="fas fa-paper-plane"></i> Submit Claim
        </button>
    </div>
</form>